{
  "manifest_version": 2,
  "name": "Spotify on media",
  "description": "This extension makes review pages of new albums possible to play it by spotify.",
  "version": "1.0",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "web_accessible_resources": [
    "content.css"
  ],
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "tabs", "webNavigation", "*://*/*"
  ]
}